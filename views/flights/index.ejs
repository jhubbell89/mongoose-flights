<%- include('../partials/boilerplate')  %>
<%- include('../partials/navbar') %> 

<title>Mongoose Flights</title>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>

        
      </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(m) { %> 
            <tr>
                <td><%= m.airline %></td>
                <td><%= m.airport %></td>
                <td><%= m.flightNo %></td>
                <td><a href="/flights/<%= m._id %>">Details</a></td>
            </tr>
        <% }); %> 
    </tbody>
</table>
