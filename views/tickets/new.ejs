<%- include('../partials/boilerplate') %> 
<%- include('../partials/navbar') %> 

<title>Add A New Ticket</title>

<form action="/flights/<%= flight._id %>/tickets" method="POST" >
    
    <label for="seat"><b>Seat:</b>  </label>
    <input name="seat" type="text" required pattern="[A-F][1-9]\d?">
    <br>
    <label for="price"><b>Price:</b></label>
    <input type="number" name="price" min="0">
    <br>
    <input type="string" name="flight" value= "<%= flight._id %>"  class="hide">
    <br>
    <input type="submit" value="Add Ticket">
</form>